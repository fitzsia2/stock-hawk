<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/percent_change_pill_green">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_stock_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="GOOG" />

        <LinearLayout
            android:id="@+id/widget_stock_details"
            android:layout_width="@dimen/widget_detail_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_stock_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/percent_change_pill"
                android:gravity="end"
                android:maxLines="1"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:textAppearance="?android:textAppearanceListItemSmall"
                tools:text="$4.00" />

            <TextView
                android:id="@+id/widget_stock_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/percent_change_pill"
                android:gravity="end"
                android:maxLines="1"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingStart="3dp"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="+0.93%" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
